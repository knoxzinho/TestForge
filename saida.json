{
  "sections": [
    {
      "title": "DOCUMENTAÇÃO FUNCIONAL – SISTEMA DE VENDA E COMPRA DE CARROS (NOVOS E USADOS)",
      "requirements": []
    },
    {
      "title": "1. Introdução",
      "requirements": []
    },
    {
      "title": "1.1 Objetivo do Sistema",
      "requirements": [
        {
          "text": "O sistema tem como objetivo gerenciar todo o ciclo de compra e venda de veículos novos e usados, permitindo que concessionárias, vendedores e administradores controlem estoque, clientes, avaliações, propostas e transações de forma eficiente e centralizada."
        }
      ]
    },
    {
      "title": "1.2 Público-Alvo",
      "requirements": [
        {
          "text": "Equipe de vendas"
        },
        {
          "text": "Administradores da concessionária"
        },
        {
          "text": "Avaliadores de veículos usados"
        },
        {
          "text": "Gestores financeiros"
        },
        {
          "text": "Clientes (acesso opcional via portal)"
        }
      ]
    },
    {
      "title": "1.3 Escopo",
      "requirements": [
        {
          "text": "O sistema abrange:"
        },
        {
          "text": "Cadastro e gestão de veículos"
        },
        {
          "text": "Controle de estoque"
        },
        {
          "text": "Registro de compra e venda"
        },
        {
          "text": "Avaliação de carros usados"
        },
        {
          "text": "Emissão de contratos e recibos"
        },
        {
          "text": "Gestão de clientes"
        },
        {
          "text": "Relatórios operacionais e financeiros"
        }
      ]
    },
    {
      "title": "2. Papéis de Usuário",
      "requirements": []
    },
    {
      "title": "2.1 Administrador",
      "requirements": [
        {
          "text": "Acesso total ao sistema"
        },
        {
          "text": "Gerenciar usuários e permissões"
        },
        {
          "text": "Configurar regras de negócio (ex: margem mínima, taxa de comissão)"
        },
        {
          "text": "Visualizar todos os relatórios"
        }
      ]
    },
    {
      "title": "2.2 Vendedor",
      "requirements": [
        {
          "text": "Registrar propostas de compra e venda"
        },
        {
          "text": "Consultar estoque"
        },
        {
          "text": "Criar contratos"
        },
        {
          "text": "Cadastrar novos clientes"
        }
      ]
    },
    {
      "title": "2.3 Avaliador",
      "requirements": [
        {
          "text": "Realizar inspeções de veículos"
        },
        {
          "text": "Registrar preços sugeridos, fotos e estado do veículo"
        }
      ]
    },
    {
      "title": "2.4 Financeiro",
      "requirements": [
        {
          "text": "Controlar pagamentos"
        },
        {
          "text": "Gerar notas fiscais"
        },
        {
          "text": "Fechar vendas"
        }
      ]
    },
    {
      "title": "3. Requisitos Funcionais",
      "requirements": []
    },
    {
      "title": "3.1 Cadastro e Consulta de Veículos",
      "requirements": []
    },
    {
      "title": "Funcionalidades:",
      "requirements": [
        {
          "text": "Cadastrar veículo (novo ou usado)"
        },
        {
          "text": "Editar dados do veículo"
        },
        {
          "text": "Adicionar fotos"
        },
        {
          "text": "Vincular estado de conservação (usados)"
        },
        {
          "text": "Visualizar estoque com filtros"
        }
      ]
    },
    {
      "title": "Campos obrigatórios:",
      "requirements": [
        {
          "text": "Marca"
        },
        {
          "text": "Modelo"
        },
        {
          "text": "Ano/modelo"
        },
        {
          "text": "Cor"
        },
        {
          "text": "Tipo de combustível"
        },
        {
          "text": "Quilometragem (somente usados)"
        },
        {
          "text": "Preço de venda"
        },
        {
          "text": "Chassi"
        },
        {
          "text": "Status: Disponível, Em negociação, Vendido"
        }
      ]
    },
    {
      "title": "Exemplos:",
      "requirements": [
        {
          "text": "“Volkswagen Gol 1.6, 2018/2018, Flex, 62.000 km”"
        },
        {
          "text": "“Hyundai HB20 0km, 2025, Branco, Gasolina”"
        }
      ]
    },
    {
      "title": "3.2 Fluxo de Compra (Veículos Usados)",
      "requirements": []
    },
    {
      "title": "Etapas:",
      "requirements": []
    },
    {
      "title": "Cadastro inicial do veículo do cliente",
      "requirements": [
        {
          "text": "Dados básicos fornecidos pelo proprietário."
        }
      ]
    },
    {
      "title": "Avaliação",
      "requirements": [
        {
          "text": "Avaliador insere fotos, condições e preço sugerido."
        }
      ]
    },
    {
      "title": "Aprovação pelo Administrador",
      "requirements": [
        {
          "text": "Pode ajustar o valor sugerido."
        }
      ]
    },
    {
      "title": "Contrato de compra",
      "requirements": [
        {
          "text": "Sistema gera documento com valor acordado."
        }
      ]
    },
    {
      "title": "Entrada no estoque",
      "requirements": [
        {
          "text": "Veículo passa a ter status: “Disponível para venda”."
        }
      ]
    },
    {
      "title": "Regras:",
      "requirements": [
        {
          "text": "Só é possível adicionar um usado ao estoque após avaliação."
        },
        {
          "text": "Avaliação deve incluir no mínimo 8 fotos."
        },
        {
          "text": "Preço de compra deve ser <= valor de venda * margem mínima configurável (ex: 20%)."
        }
      ]
    },
    {
      "title": "3.3 Fluxo de Venda (Veículos Novos e Usados)",
      "requirements": []
    },
    {
      "title": "Etapas:",
      "requirements": []
    },
    {
      "title": "Cliente define interesse",
      "requirements": [
        {
          "text": "Vendedor cria Proposta de Venda."
        }
      ]
    },
    {
      "title": "Negociação",
      "requirements": [
        {
          "text": "Possibilidade de aplicar descontos dentro do limite liberado."
        }
      ]
    },
    {
      "title": "Aprovação (quando necessário)",
      "requirements": [
        {
          "text": "Se desconto > limite do vendedor, solicitação vai ao Administrador."
        }
      ]
    },
    {
      "title": "Contrato",
      "requirements": [
        {
          "text": "Sistema gera contrato de venda automaticamente."
        }
      ]
    },
    {
      "title": "Pagamento",
      "requirements": [
        {
          "text": "Financeiro registra forma de pagamento (Pix, boleto, financiamento)."
        }
      ]
    },
    {
      "title": "Baixa no estoque",
      "requirements": [
        {
          "text": "Status muda para “Vendido”."
        }
      ]
    },
    {
      "title": "Regras:",
      "requirements": [
        {
          "text": "Veículos vendidos não podem voltar ao estoque sem gerar uma “devolução” formal."
        },
        {
          "text": "Propostas expiram em 24h (configurável)."
        }
      ]
    },
    {
      "title": "3.4 Gestão de Clientes",
      "requirements": []
    },
    {
      "title": "Funcionalidades:",
      "requirements": [
        {
          "text": "Cadastrar novos clientes"
        },
        {
          "text": "Consultar histórico de compras"
        },
        {
          "text": "Verificar pendências financeiras"
        }
      ]
    },
    {
      "title": "Campos obrigatórios:",
      "requirements": [
        {
          "text": "Nome completo"
        },
        {
          "text": "CPF"
        },
        {
          "text": "Telefone"
        },
        {
          "text": "E-mail"
        },
        {
          "text": "Endereço"
        }
      ]
    },
    {
      "title": "3.5 Relatórios",
      "requirements": []
    },
    {
      "title": "Tipos:",
      "requirements": [
        {
          "text": "Relatório de vendas por período"
        },
        {
          "text": "Relatório de margem por veículo"
        },
        {
          "text": "Relatório de estoque (novos e usados)"
        },
        {
          "text": "Relatório de avaliação de usados"
        },
        {
          "text": "Relatório financeiro geral"
        }
      ]
    },
    {
      "title": "Exemplos:",
      "requirements": [
        {
          "text": "“Vendas do mês de outubro: R$ 412.000 — 14 veículos vendidos”"
        },
        {
          "text": "“Margem média de lucro: 18,5%”"
        }
      ]
    },
    {
      "title": "4. Fluxos do Sistema (Workflows)",
      "requirements": []
    },
    {
      "title": "4.1 Workflow: Avaliação de Carro Usado",
      "requirements": [
        {
          "text": "Vendedor → registra dados do cliente + carro"
        },
        {
          "text": "Avaliador → faz inspeção"
        },
        {
          "text": "Sistema → registra valor sugerido"
        },
        {
          "text": "Administrador → aprova valor"
        },
        {
          "text": "Sistema → muda status do veículo → “Aguardando documentação”"
        },
        {
          "text": "Após documentos → “Disponível para venda”"
        }
      ]
    },
    {
      "title": "4.2 Workflow: Venda de Carro",
      "requirements": [
        {
          "text": "Vendedor seleciona cliente"
        },
        {
          "text": "Escolhe veículo"
        },
        {
          "text": "Cadastra proposta"
        },
        {
          "text": "Sistema verifica limites de desconto"
        },
        {
          "text": "Se ok → contrato gerado"
        },
        {
          "text": "Financeiro confirma pagamento"
        },
        {
          "text": "Sistema atualiza estoque → “Vendido”"
        }
      ]
    },
    {
      "title": "5. Requisitos Não Funcionais",
      "requirements": []
    },
    {
      "title": "5.1 Performance",
      "requirements": [
        {
          "text": "Resposta das telas deve ser inferior a 2s"
        },
        {
          "text": "Suportar até 200 usuários simultâneos"
        }
      ]
    },
    {
      "title": "5.2 Segurança",
      "requirements": [
        {
          "text": "Controle de acesso por papel"
        },
        {
          "text": "Logs de todas as alterações de preço e contratos"
        }
      ]
    },
    {
      "title": "5.3 Usabilidade",
      "requirements": [
        {
          "text": "Interface em português"
        },
        {
          "text": "Layout responsivo para desktop e tablet"
        }
      ]
    },
